export DEBIAN_FRONTEND=noninteractive && \
export UPPER_CONSTRAINTS_FILE=https://raw.githubusercontent.com/sapcc/requirements/stable/ussuri-m3/upper-constraints.txt && \
apt-get update && \
apt-get install -y build-essential python-pip python3-dev git libpcre++-dev gettext sudo && \
pip install -U pip && \
pip install tox "six>=1.14.0" && \
git clone -b stable/ussuri-m3 --single-branch https://github.com/sapcc/neutron.git --depth=1 && \
cd neutron && \
tox -e pep8,py36
